@import 'bourbon';

html, body {
  font-family: "MS Sans Serif", Geneva, sans-serif;
}

.app-container {
  position: relative;
  width: 810px;
  height: 822px;
  margin: 0 auto;
  background: url(image-path('app_background.png'));

  .tee-shirt-logo {
    position: absolute;
    top: 124px;
    height: 100px;
    width: 162px;
  }
  .permissions {
    position: absolute;
    right: 17px;
    bottom: 104px;
    width: 320px;
    height: 140px;
  }

  .explanations {
    position: absolute;
    top: 460px;
    width: 376px;
    padding-left: 27px;
    text-align: justify;
    font-style: italic;
    font-size: 1em;
    color: #2193D9;

    .bold {
      font-size: 1.1em;
      font-weight: bold;
    }
  }
}

/* ========== */
/* = Footer = */
/* ========== */
.footer {
  position: absolute;
  bottom: 0;
  padding: 0 20px 0px;
  text-align: justify;
  font-size: 0.9em;
  color: white;

  .right {
    float: right;
  }

  .links {
    text-align: center;
    color: #444;

    a {
      text-decoration: underline;
      color: #444;
    }
  }
}

/* ========== */
/* = Popups = */
/* ========== */
.popup-background {
  position:fixed;
  height:100%;
  width:100%;
  top:0;
  left:0;
  background:rgba(0,0,0,0.7);
  z-index:1;
}

.popup {
  z-index:2;
  position:fixed;
  top: 250px;
  left: 150px;
  width: 400px;
  height: 300px;
  background: url(image-path('popup_background.png'));
  border:2px solid #cecece;

  .popup-header {
    height: 190px;
    text-align: center;

    h2 {
      width: 80%;
      margin: 16px auto 0px auto;
      color: white;
    }
  }

  .popup-body {
    height: 60px;
    padding: 0 10px;
    font-size: 13px;
    font-weight: bold;
  }

  .popup-footer {
    text-align: right;
    padding-right: 10px;
  }
}